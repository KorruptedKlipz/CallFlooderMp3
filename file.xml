//Prerequisites
            Console.Title = "Login";
            DateTime currentDate = DateTime.Now;
            ConsoleSpiner spin = new ConsoleSpiner();

            //Getting Username
            Console.ForegroundColor = ConsoleColor.Red; Console.Write("Username: ");
            Console.ResetColor();
            username = Console.ReadLine();

            //Getting Password
            SecureString pass = PasswordMethod();
            password = new System.Net.NetworkCredential(string.Empty, pass).Password;
            Console.Write("\n");

            //Getting Admin Pin
            SecureString pin = AdminPinMethod();
            adminPin = new System.Net.NetworkCredential(string.Empty, pin).Password;
            Console.Write("\n");

            //Getting Credentials
            WebClient client = new WebClient();
            string fullCreds = client.DownloadString(credsUrl);
            string[] userLine = fullCreds.Split(new[] { '\r', '\n' });
            string acCreds = client.DownloadString("https://pastebin.com/raw/P6Hqp7VT");
            string[] adminLine = acCreds.Split(new[] { '\r', '\n' });

            //Checking Credentials
            try
            {
                for (int i = 0; i < userLine.Length; i += 2)
                {
                    //Basic Into from PasteBin
                    string[] line = userLine[i].Split(':');
                    string cUsername = line[0];
                    string cPassword = line[1];
                    string cExp = line[2];

                    //Admin Info from PasteBin
                    string[] acLine = adminLine[i].Split(':');
                    string acUsername = acLine[0];
                    string acPin = acLine[1];

                    //If Username or Password is Empty
                    if (username == "" || password == "")
                    {
                        Environment.Exit(0);
                    }

                    Console.WriteLine(userLine[i]);
                    Console.WriteLine(adminLine[i]);

                    //Converting Date into Readable Date for "DateTime.Compare()"
                    DateTime expDate = Convert.ToDateTime(cExp);
                    int checkExp = DateTime.Compare(currentDate, expDate);

                    //If Username or Password is Empty
                    if (username == "" || password == "" || checkExp > 0 || acPin == "")
                    {
                        Environment.Exit(0);
                    }

                    //Valid Login (Basic)
                    if (username == cUsername && password == cPassword && checkExp < 0 && adminPin == acPin)
                    {
                        Console.ForegroundColor = ConsoleColor.Red;
                        Console.Write("\n\nLogging in...");
                        for (int k = 0; k < 12; k++)
                        {
                            spin.Turn();
                            Thread.Sleep(150);
                        }
                        Console.Clear();
                        Console.ResetColor();
                        AdminPanel();
                    }

                    //Invalid Login or Expired Account
                    else if (username != cUsername || password != cPassword || checkExp > 0 || adminPin != acPin)
                    {
                        Environment.Exit(0);
                    }
                }
            }
            catch
            {
                return;
            }